<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiwoong.finalexam2.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="156dp"
        android:padding="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dos"
            android:layout_weight="0.25" />

        <TextView
            android:id="@+id/phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="한양대 본점 : 031-409-6969"
            android:textColor="#ffff"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        />
    <Button
        android:id="@+id/menu"
        android:layout_gravity="center"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:background="#000000"
        android:textColor="#ffff"
        android:onClick="onClick"
        android:text="Menu" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/myrecipe"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="onClick"
        android:text="My Recipe"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/site"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="onClick"
        android:text="DOSMAS PAGE"
        android:textColor="#ffff" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:id="@+id/location"
        android:layout_width="164dp"
        android:layout_height="73dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="onClick"
        android:text="Dosmas location"
        android:textColor="#ffff" />
</LinearLayout>
